<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginVertical="8dp"
    app:cardCornerRadius="10dp"
    android:layout_marginHorizontal="28dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/ingredient_image_view"
            android:layout_width="57dp"
            android:layout_height="57dp"
            android:scaleType="centerCrop"
            android:layout_marginStart="8dp"
            android:src="@drawable/onboarding_backgroung_image"
            app:shapeAppearanceOverlay="@style/CornerRadius50Persent"/>

        <TextView
            android:id="@+id/ingredient_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="20dp"
            android:textSize="18dp"
            android:singleLine="true"
            android:layout_gravity="center_vertical"
            android:fontFamily="@font/inter_medium"
            android:textStyle="bold"
            tools:text="@tools:sample/lorem/random"/>

        <TextView
            android:id="@+id/ingredient_count_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:textSize="18dp"
            android:layout_marginEnd="22dp"
            android:singleLine="true"
            android:layout_gravity="center_vertical"
            android:fontFamily="@font/inter_medium"
            android:textStyle="bold"
            tools:text="1"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>